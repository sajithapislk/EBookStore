@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<EBookStore.Models.Book>

<main>
    <div class="vh-100 d-flex align-items-center gap-3">
        <div class="h-100 rounded-3 p-5"
             style="background-color: #E5EDFA; width: 55%">

            <!-- Hero Greet -->
            <h1 class="text-capitalize font-weight-bold pe-5"
                style="font-size: 70px; margin-top: 120px; color: #1a4671">
                Best Selling Books
                <span class="px-4 rounded-5" style="background-color: #1a4671">📚</span>
                For Customer
            </h1>

            <p style="color: #5e7d9b">
                Not sure What to find Next? Explore Our Catelog of Books With Your
                Favourite Authors
            </p>

            <!-- Explore Now Button -->
            <button type="button" id="navigateFindBookBtn"
                    class="btn border-2 rounded-5"
                    style="border-color: #1a4671; color: #1a4671">
                Explore now
            </button>

            <button class="btn rounded-5 arrowButton"
                    style="background-color: #1a4671; color: #eef2f3">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="20"
                     height="20"
                     viewBox="0 0 24 24">
                    <path fill="currentColor"
                          d="m14 18l-1.4-1.45L16.15 13H4v-2h12.15L12.6 7.45L14 6l6 6z" />
                </svg>
            </button>
        </div>

        <!-- Hero-img -->
        <div class="h-100" style="background-color: #eef2f3; width: 45%">
            <img src="https://www.pxfuel.com/en/query?q=flying+books" alt="Book Image" class="w-100 h-100 object-fit-cover rounded-3" />
        </div>
    </div>

    @* Best way to manage your reading life *@
    <div class="main-background-color mt-3 rounded-3 py-5 container-fluid">
        <div class="p-5">
            <div class="rounded-3 position-relative mx-auto" style="background-color: #E5EDFA; color: #0E223B; width: 300px;">
                <i class="fa-solid fa-circle position-absolute fw-semibold" style="top: 10px; left: 20px; font-size: 8px;"></i>

                <p class="fs-5 text-center">Why choose E-Book</p>
            </div>

            <h3 class="fs-1 font-weight-bold text-center" style="color: #E5EDFA;">Best way to manage your reading life</h3>
            <small class="text-center d-block" style="color: #8894a3;">Keep track of what you're reading, set regarding goals, and connect with friends to share your book reviews.</small>
        </div>

        @* Grid Item *@
        <div class="row px-5 mt-4 pb-5">
            <div class="col-md-4">
                @* Icon *@
                <div class="text-center mb-2">
                    <i class="fa-solid fa-magnifying-glass fs-5" style="color: #E5EDFA;"></i>
                </div>
                <div class="mb-1">
                    <strong class="fs-5 d-block text-center" style="color: #E5EDFA;">Book Biscovery</strong>
                </div>
                <div>
                    <small class="d-block text-center" style="color: #8894a3;">Discover new books to read and get based on your interests, reading history, and the recommendations of other users.</small>
                </div>
            </div>

            <div class="col-md-4">
                @* Icon *@
                <div class="text-center mb-2">
                    <i class="fa-solid fa-users fs-5" style="color: #E5EDFA;"></i>
                </div>
                <div class="mb-1">
                    <strong class="fs-5 d-block text-center" style="color: #E5EDFA;">Friends and Community</strong>
                </div>
                <div>
                    <small class="d-block text-center" style="color: #8894a3;">You can connet with friends, family members, and other people who share your love of reading.</small>
                </div>
            </div>
            <div class="col-md-4">
                @* Icon *@
                <div class="text-center mb-2">
                    <i class="fa-solid fa-star fs-5" style="color: #E5EDFA;"></i>
                </div>
                <div class="mb-1">
                    <strong class="fs-5 d-block text-center" style="color: #E5EDFA;">Book Reviews</strong>
                </div>
                <div>
                    <small class="d-block text-center" style="color: #8894a3;">You can write reviews of books that you've read and share your thoughts with other E-Book users.'</small>
                </div>
            </div>
        </div>

        <div class="p-5">
            <div class="row">
                @* Image *@
                <div class="col-md-4 rounded-3" style="height: 500px;">
                    <img src="https://images.unsplash.com/photo-1604882737206-8a000c03d8fe?q=80&w=1287&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="w-100 h-100 object-fit-cover rounded-3" alt="Alternate Text" />
                </div>

                @* Content *@
                <div class="col-md-8 p-5">
                    <h3 class="fs-1 font-weight-bold" style="color: #E5EDFA;">The best way to discover, track, and share your reading life</h3>

                    <small style="color: #8894a3;">From discovering new books to tracing your reading progress to connecting with other readers. E-Book has everything you need to manage your reading life. Books to tracking your reading progress.</small>

                    <div>
                        @Html.ActionLink("Join", "Index", "Home", new { area = "" }, new { @class = "mt-4 btn btn-light font-weight-bold rounded-5 px-5 py-2" })
                    </div>

                </div>
            </div>
        </div>


    </div>

    @* Popular Books *@
    <div class="mt-3 rounded-3 p-5 container-fluid" style="background-color: #E5EDFA;">
        <h3 class="font-weight-bold text-center fs-1" style="color: #0E223B;"> Popular Books </h3>

        <div class="row gap-5 justify-content-center mt-5">
            @foreach (var book in Model)
            {
                <div class="card pt-3" style="width: 18rem; background-color: #0E223B;">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRWgLVN_dubU6wv779r9wLqwinAopLxMtAA8rawQNGHFQ&s" class="rounded-1" alt="Book Image">
                    <div class="card-body">
                        <h5 class="card-title font-weight-bold text-light">@book.Title</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <p class="card-text" style="color: #8894a3;">James Cameroon</p>
                            <p class="font-weight-bold" style="color: #8894a3;">Rs. 500</p>
                        </div>
                        @Html.ActionLink("View details", "Details", "Book", new { id = book.BookId }, new { @class = "btn d-block w-100 text-light btn-primary rounded-5" })
                    </div>
                </div>
            }

            </div>
    </div>


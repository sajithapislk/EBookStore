    @* Get started *@
    <div class="mt-3 mb-5 rounded-3 container-fluid d-flex justify-content-center" style="background-color: #E5EDFA; padding: 80px;">

        <div class="main-background-color p-5 rounded-2">
            <h3 class="text-center px-4" style="color: #E5EDFA;">Get started with E-Books today and discover the joy of reading and buying with a community of book lovers</h3>

            <p class="text-center mt-4" style="color: #8894a3;">E-Book is the largest book community, with over 5000+ members. It's a great place to discover new books, track your reading progress, and connect with other readers who share your love of reading.s</p>

            <div class="d-flex justify-content-center align-items-center">
                @Html.ActionLink("Join for free", "Index", "Home", new { area = "" }, new { @class = "mt-4 btn btn-light font-weight-bold rounded-5 px-5 py-2" })
            </div>
        </div>
    </div>

</main>

@section Scripts {

    <script>
        $(document).ready(function () {

            // JQuery for navigate to find books page when user clicks Explore now button.
            $(document).on("click", "#navigateFindBookBtn", function (e) {
                e.preventDefault();
                window.location.href = "/Book/FindBooks";
            })

        })</script>
}



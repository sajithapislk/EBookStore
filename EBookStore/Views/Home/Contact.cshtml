@{
    ViewBag.Title = "Contact Us";
    ViewBag.Message = "We'd Love to Hear from You!";
}

<div style="font-family: Arial, sans-serif; background-color: #f8f9fa; padding: 40px;">
    <div style="max-width: 800px; margin: auto; text-align: center;">
        <h1 style="color: #2c3e50;">@ViewBag.Title</h1>
        <p style="font-size: 18px; color: #34495e;">@ViewBag.Message</p>
        <hr style="margin: 20px 0; border-top: 2px solid #3498db;" />
    </div>

    <div style="max-width: 800px; margin: auto;">
        <h2 style="color: #2980b9; text-align: center;">Contact Information</h2>
        <p style="font-size: 16px; color: #7f8c8d; line-height: 1.6;">
            If you have any inquiries or need assistance, feel free to reach out to us through any of the following methods:
        </p>

        <div style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <h3 style="color: #2980b9; margin-bottom: 10px;">Address</h3>
            <p style="font-size: 16px; color: #7f8c8d;">
                <strong>Branch 1:</strong> No-33, Main Street, Kekirawa<br />
                <strong>Branch 2:</strong> No-44, Raithalawala, Matale
            </p>

            <h3 style="color: #2980b9; margin-bottom: 10px;">Phone</h3>
            <p style="font-size: 16px; color: #7f8c8d;">
                <abbr title="Phone">P:</abbr> 071-280-5509
            </p>

            <h3 style="color: #2980b9; margin-bottom: 10px;">Email</h3>
            <p style="font-size: 16px; color: #7f8c8d;">
                <strong>General Inquiries:</strong> <a href="mailto:onlinebooks@gmail.com" style="color: #3498db;">onlinebooks@gmail.com</a>
            </p>
        </div>

        <h2 style="color: #2980b9; text-align: center; margin-top: 40px;">Get in Touch</h2>
        <form style="background-color: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <div style="margin-bottom: 20px;">
                <label for="name" style="display: block; font-weight: bold; color: #34495e;">Name</label>
                <input type="text" id="name" name="name" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" placeholder="Your name" />
            </div>
            <div style="margin-bottom: 20px;">
                <label for="email" style="display: block; font-weight: bold; color: #34495e;">Email</label>
                <input type="email" id="email" name="email" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" placeholder="Your email address" />
            </div>
            <div style="margin-bottom: 20px;">
                <label for="message" style="display: block; font-weight: bold; color: #34495e;">Message</label>
                <textarea id="message" name="message" rows="5" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" placeholder="Your message"></textarea>
            </div>
            <div style="text-align: center;">
                <button type="submit" style="background-color: #3498db; color: #fff; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Send Message</button>
            </div>
        </form>
    </div>
</div>

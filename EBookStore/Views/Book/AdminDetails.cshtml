@model EBookStore.Models.Book

@{
    ViewBag.Title = "Book Details";
}

<h2>Book Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>

        <dt>Author</dt>
        <dd>@Html.DisplayFor(model => model.Author.FirstName)</dd>

        <dt>ISBN</dt>
        <dd>@Html.DisplayFor(model => model.ISBN)</dd>

        <dt>Price</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>

        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BookId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
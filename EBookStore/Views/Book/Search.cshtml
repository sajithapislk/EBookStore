@model IEnumerable<EBookStore.Models.Book>

<div style="margin: 20px auto; max-width: 800px; font-family: Arial, sans-serif;">
    @using (Html.BeginForm("Search", "Book", FormMethod.Get))
    {
        <div style="display: flex; justify-content: center; margin-bottom: 20px;">
            <input type="text" name="query" placeholder="Search for books..."
                   style="flex: 1; padding: 10px; border: 1px solid #ccc; border-radius: 4px; box-sizing: border-box; margin-right: 10px;" />
            <button type="submit"
                    style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 4px; cursor: pointer;">
                Search
            </button>
        </div>
    }

    <h2 style="text-align: center; color: #333; margin-bottom: 20px;">Search Results</h2>

    <table style="width: 100%; border-collapse: collapse; background: white; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <thead>
            <tr style="background-color: #007BFF; color: white; text-align: left;">
                <th style="padding: 10px;">Title</th>
                <th style="padding: 10px;">Author</th>
                <th style="padding: 10px;">Price</th>
                <th style="padding: 10px;">Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr style="border-bottom: 1px solid #ccc;">
                    <td style="padding: 10px;">@book.Title</td>
                    <td style="padding: 10px;">@book.Author</td>
                    <td style="padding: 10px;">@book.Price.ToString("C")</td>
                    <td style="padding: 10px; text-align: center;">
                        <a href="@Url.Action("Details", "Book", new { id = book.BookId })"
                           style="color: #007BFF; text-decoration: none; padding: 5px 10px; border: 1px solid #007BFF; border-radius: 4px;">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model EBookStore.Models.Book
@{
    ViewBag.Title = $"{Model.Title}\'s Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="~/BookImages/java-book244711532.jpg" class="img-fluid rounded-3" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <h2 class="font-weight-bold">@Model.Title</h2>
            <p><strong>ISBN:</strong> @Model.ISBN</p>

            @Html.ActionLink("Back to page", "FindBooks", "Book", htmlAttributes: new { @class = "btn btn-success" })
            @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post))
            {
                @Html.Hidden("id", Model.BookId)
                <button type="submit" class = "btn btn-primary">Add to Cart</button>
            }
        </div>
    </div>
</div>


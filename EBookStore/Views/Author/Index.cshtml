@model IEnumerable<EBookStore.Models.Author>
@{
    ViewBag.Title = "Author List";
   Layout = "~/Views/Shared/_Admin_Dashboard_Layout.cshtml";
}

<h2>Authors</h2>

<p>
    <a href="@Url.Action("Create", "Author", new { area = "Admin" })" class="btn btn-primary">Add New Author</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.AuthorId</td>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>
                    <img src="@author.Image" alt="Author Image" style="width:50px;height:50px;">
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Author", new { area = "Admin", id = author.AuthorId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Author", new { area = "Admin", id = author.AuthorId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
